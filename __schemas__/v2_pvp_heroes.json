{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "type": {
        "type": "string"
      },
      "stats": {
        "type": "object",
        "properties": {
          "offense": {
            "type": "number"
          },
          "defense": {
            "type": "number"
          },
          "speed": {
            "type": "number"
          }
        }
      },
      "overlay": {
        "type": "string"
      },
      "underlay": {
        "type": "string"
      },
      "skins": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number"
            },
            "name": {
              "type": "string"
            },
            "icon": {
              "type": "string"
            },
            "default": {
              "type": "boolean"
            },
            "unlock_items": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          },
          "required": [
            "id",
            "name",
            "icon",
            "default",
            "unlock_items"
          ]
        }
      }
    },
    "required": [
      "id",
      "name",
      "description",
      "type",
      "stats",
      "overlay",
      "underlay",
      "skins"
    ]
  },
  "properties": {},
  "additionalProperties": false
}